<p id="notice"><%= notice %></p>

<h1>Categorías</h1>


  
<table class="table table-striped">
  <thead>
    <tr>
      <th>Nombre categorias</th>
       <th>Nombre Cant. Productos</th>
        <th>Editar Categoría</th>
         <th>Eliminar Categorias</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td><%= link_to category.name, category %></td>
        <td><%= category.products.count %></td>
        <td><button type="button" class="btn btn-warning"><span class="glyphicon glyphicon-pencil"></span>
          <%= link_to ' Modificar', edit_category_path(category) %></button></td>
        <td><button type="button" class="btn btn-danger"><span class="glyphicon glyphicon-remove">
          <%= link_to ' Eliminar', category, method: :delete, data: { confirm: 'Are you sure?' } %></button></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


<button type="button" class="btn btn-primary"><span class="glyphicon glyphicon-plus"></span><%= link_to ' Categoría', new_category_path %></button>
